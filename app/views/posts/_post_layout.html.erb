<div class="col-md-8 mx-auto card bg-light">

  <div class=" ">
    <div class="font-weight-bold mt-2">
      <%= object.user.fname %>
      <%= object.user.lname %>
    </div> <br>
        
    <div class="font-italic">
      <%= object.content %>
    </div>
    
    <% if object.imageURL%>
      <div class="center py-4">
        <%= image_tag(object.imageURL)%>
      </div>
    <% end %>
  </div> 

  <div class="border-bottom"><%= render 'likes/like_posts', object: object%></div>

  <div class="mx-5">

    <%= render 'comments/comment', object: object %>

    
    <div class="  ">
      <%= render 'comments/form', object: object %>
    </div>
  </div>
  <br><br>
</div> <br> <br> 
